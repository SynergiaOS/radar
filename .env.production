# Production Environment Configuration for radar-wig.pl

# Database Configuration
DATABASE_URL=sqlite:///realtime_data.db

# API Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your-secret-key-change-in-production

# CORS Configuration for radar-wig.pl
ALLOWED_ORIGINS=https://radar-wig.pl,https://www.radar-wig.pl

# Chart Service Configuration
CHART_CACHE_DURATION=300
MAX_CHART_REQUESTS_PER_MINUTE=60

# WebSocket Configuration
SOCKETIO_ASYNC_MODE=eventlet
SOCKETIO_CORS_ALLOWED_ORIGINS=https://radar-wig.pl,https://www.radar-wig.pl

# Yahoo Finance API Configuration
YFINANCE_CACHE_DURATION=300
RATE_LIMIT_DELAY=0.5

# Professional Charts Configuration
ENABLE_PROFESSIONAL_CHARTS=true
CHART_GENERATION_TIMEOUT=30
MAX_CHARTS_PER_REQUEST=4

# Security Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/radar-wig.pl.crt
SSL_KEY_PATH=/etc/ssl/private/radar-wig.pl.key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/radar-wig/app.log

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=120
WORKER_CONNECTIONS=1000

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Monitoring Configuration
ENABLE_MONITORING=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# Domain Configuration
DOMAIN=radar-wig.pl
SITE_NAME=GPW Smart Analyzer
SITE_VERSION=2.0.0
CONTACT_EMAIL=admin@radar-wig.pl

# Feature Flags
ENABLE_REALTIME_DATA=true
ENABLE_WATCHLIST=true
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_MARKET_REGIME_DETECTION=true
ENABLE_CORRELATION_ANALYSIS=true

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/var/www/radar-wig/uploads

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_FOLDER=/var/backups/radar-wig